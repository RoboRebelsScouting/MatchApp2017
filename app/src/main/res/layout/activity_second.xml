<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_second"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="scouting2017.matchapp.secondActivity">

    <TextView
        android:text="Autonomous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/autoLabel"
        android:textSize="36sp"
        android:textColor="?attr/actionModeSplitBackground"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/crossBaselineAuto"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/autoTimerText"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_below="@+id/autoLabel"
        android:layout_alignParentStart="true" />

    <Button
        android:text="To Teleop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toTeleop"
        android:onClick="toTeleop"
        android:textSize="24sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="normal|bold" />

    <Button
        android:text="Gear Picked Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gearPickedUpAuto"
        android:onClick="gearPickedUp"
        android:elevation="0dp"
        tools:textSize="28sp"
        android:textSize="28sp"
        android:layout_below="@+id/autoTimerText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:textColor="?attr/actionModeSplitBackground"
        android:textStyle="normal|bold"
        android:layout_alignEnd="@+id/hopperDumpedAuto" />

    <TextView
        android:text="0"
        android:layout_width="50dp"
        android:id="@+id/numberOfGearsPickedUpText"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="36sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/gearPickedUpAuto"
        android:layout_above="@+id/numberOfGearsPlacedText"
        android:layout_alignEnd="@+id/toTeleop"
        android:textAlignment="center" />

    <Button
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:id="@+id/minusGearPlacedAuto"
        android:text="—"
        android:onClick="minusGearPlacedAuto"
        android:textColor="?attr/actionModeSplitBackground"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_above="@+id/droppedGearAuto"
        android:layout_alignStart="@+id/minusGearPickedUpAuto"
        android:layout_alignTop="@+id/numberOfGearsPlacedText"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:id="@+id/minusGearPickedUpAuto"
        android:text="—"
        android:onClick="minusGearPickedUpAuto"
        android:textColor="?attr/actionModeSplitBackground"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_above="@+id/numberOfGearsPlacedText"
        android:layout_alignTop="@+id/numberOfGearsPickedUpText"
        android:layout_alignParentEnd="true" />

    <ToggleButton
        android:text="Cross Baseline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/crossBaselineAuto"
        tools:text="Cross Baseline"
        android:textOff="Cross Baseline"
        android:textOn="Didn't Move"
        android:textSize="24sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginBottom="14dp"
        android:textStyle="normal|bold"
        android:layout_above="@+id/toTeleop"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="0"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/numberOfDroppedGearsText"
        android:textSize="36sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_alignBottom="@+id/droppedGearAuto"
        android:layout_alignStart="@+id/numberOfHighGoalsText"
        android:layout_alignTop="@+id/droppedGearAuto"
        android:layout_alignEnd="@+id/numberOfGearsPlacedText"
        android:textAlignment="center" />

    <TextView
        android:text="0"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/numberOfGearsPlacedText"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="36sp"
        android:layout_marginTop="50dp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_below="@+id/gearPickedUpAuto"
        android:layout_alignStart="@+id/numberOfGearsPickedUpText"
        android:layout_alignEnd="@+id/numberOfGearsPickedUpText"
        android:textAlignment="center" />

    <Button
        android:text="Gear Placed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gearPlacedAuto"
        android:onClick="gearPlaced"
        android:textSize="28sp"
        android:textColor="?attr/actionModeSplitBackground"
        android:textStyle="normal|bold"
        android:layout_alignTop="@+id/numberOfGearsPlacedText"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/gearPickedUpAuto" />

    <Button
        android:text="Dropped Gear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/droppedGearAuto"
        android:textSize="28sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/gearPlacedAuto"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/gearPlacedAuto" />

    <Button
        android:text="—"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:id="@+id/minusHighGoalAuto"
        android:onClick="minusHighGoalAuto"
        android:textColor="?attr/actionModeSplitBackground"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_alignStart="@+id/minusLowGoalAuto"
        android:layout_alignBottom="@+id/numberOfHighGoalsText"
        android:layout_alignTop="@+id/numberOfHighGoalsText"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="0"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/numberOfHighGoalsText"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="36sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_alignBottom="@+id/highGoalAuto"
        android:layout_alignEnd="@+id/numberOfLowGoalsText"
        android:layout_alignTop="@+id/highGoalAuto"
        android:layout_alignStart="@+id/numberOfLowGoalsText"
        android:textAlignment="center" />

    <Button
        android:text="—"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:id="@+id/minusLowGoalAuto"
        android:onClick="minusLowGoalAuto"
        android:textColor="?attr/actionModeSplitBackground"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_alignStart="@+id/miunsHopperDumpedAuto"
        android:layout_alignBottom="@+id/lowGoalAuto"
        android:layout_alignTop="@+id/numberOfLowGoalsText"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="—"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:id="@+id/minusDroppedGearAuto"
        android:textStyle="normal|bold"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/numberOfDroppedGearsText"
        android:layout_alignStart="@+id/minusGearPlacedAuto"
        android:layout_alignTop="@+id/numberOfDroppedGearsText"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="—"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:id="@+id/miunsHopperDumpedAuto"
        android:onClick="minusHopperDumpedAuto"
        android:textColor="?attr/actionModeSplitBackground"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_alignBottom="@+id/numberOfHoppersDumpedText"
        android:layout_alignStart="@+id/minusDroppedGearAuto"
        android:layout_alignTop="@+id/numberOfHoppersDumpedText"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="0"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/numberOfHoppersDumpedText"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="36sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_alignBottom="@+id/hopperDumpedAuto"
        android:layout_alignEnd="@+id/numberOfGearsPlacedText"
        android:layout_alignTop="@+id/hopperDumpedAuto"
        android:layout_alignStart="@+id/numberOfGearsPlacedText"
        android:textAlignment="center" />

    <Button
        android:text="Hopper Dumped"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hopperDumpedAuto"
        android:onClick="hopperDumpedAuto"
        android:textSize="28sp"
        android:textColor="?attr/actionModeSplitBackground"
        android:textStyle="normal|bold"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/droppedGearAuto"
        android:layout_alignParentStart="true" />

    <Button
        android:text="High Goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/highGoalAuto"
        android:onClick="highGoal"
        android:textSize="28sp"
        android:textColor="?attr/actionModeSplitBackground"
        android:textStyle="normal|bold"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/crossBaselineAuto"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/hopperDumpedAuto" />

    <TextView
        android:text="0"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/numberOfLowGoalsText"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="36sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_below="@+id/numberOfHoppersDumpedText"
        android:layout_alignStart="@+id/numberOfHoppersDumpedText"
        android:layout_marginTop="45dp"
        android:layout_alignEnd="@+id/numberOfHoppersDumpedText"
        android:textAlignment="center" />

    <Button
        android:text="Low Goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lowGoalAuto"
        android:onClick="lowGoal"
        android:textSize="28sp"
        android:textColor="?attr/actionModeSplitBackground"
        android:textStyle="normal|bold"
        android:layout_alignTop="@+id/numberOfLowGoalsText"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/hopperDumpedAuto" />

</RelativeLayout>
